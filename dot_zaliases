alias vi='nvim'
alias vim='nvim'
alias cp='cp -v'
alias grep='grep --color=auto'
alias ln='ln -v'
alias mv='mv -v'
alias naut='nautilus --new-window "$PWD" >/dev/null 2>/dev/null &'
alias rm='rm -v'
alias gst="git status"
alias glog="git log --oneline"
alias gco="git checkout"
if [ "${TERM}" = "xterm-kitty" ]; then
	alias ssh="kitty +kitten ssh"
fi

exec swayidle -w \
	timeout 600 'swaylock -f -i /tmp/lockpaper.jpg' \
	timeout 900 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f -i /tmp/lockpaper.jpg'

